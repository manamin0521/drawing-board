<%= content_for(:header)  do %>
    <title>シェアパレ</title>
    <style type="text/css">
        *{
            margin: 0;
            padding: 0;
        }
        
        body{
            background: #1253a4;
        }
        
        header{
            background: #fff;
            width: 100%;
            overflow: hidden;
        }
        
        header img{
            display: block;
            width: 52px;
            float: left;
            margin-top: 12px;
            margin-left: 36px;
        }
        
        nav{
            width: 960px;
            margin: 0 auto;
        }
        
        nav ul{
            overflow: hidden;
        }
        
        nav li{
            list-style-type: none;
            display: block;
            width: 272px;
            padding: 24px;
            float: left;
            text-align: center;
        }
        
        nav li a{
            text-decoration: none;
            color: #333333;
            padding: 12px;
        }
        
        
        main{
            
        }
        
        .container{
            width: 960px;
            margin: 0 auto;
        }
        
        #intro{
            height: 500px;
            background: #ffd464;
            padding-top: 120px;
        }
        
        #intro img{
            display: block;
            margin-top: 120px;
            margin: 0 auto;
        }
        
        #intro a{
            text-decoration: none;
            color: #fff;
            border: 3px solid #fff;
            border-radius: 8px;
            transition: 0.4s;
            
            display: block;
            width: 180px;
            padding: 18px;
            text-align: center;
            margin: 96px auto 0;
        }
        
        #intro a:hover{
            color: #ffd464;
            background: #fff;
        }
        
        #works{
            width: 100%;
            padding: 36px 0;
            padding-bottom: 128px;
        }
        
        #works .icon{
            width: 84px;
            display: block;
            margin: 0 auto;
            margin-bottom: 24px;
        }
        
        
        
        #works ul{
            overflow: hidden;    
        }
        
        #works ul li{
            display: block;
            width: 300px;
            height: 360px;
            margin: 30px 30px 0 0;
            background: #fff;
            list-style-type: none;
            float: left;
            border-radius: 6px;
        }
        
        #works ul li:nth-child(3n){
            margin-right: 0;
        }
        
        #works ul li img{
            display: block;
            background: #fff;
            border: 4px solid #130f30;
            padding: 48px;
            margin: 0 auto;
            margin-top: 12px;
        }
        
        #works h2{
            color: #f9f9f9;
        }
        
        footer{
            background: #f4f4f2;
            height: 84px;
        }
        
        footer p{
            color: #333333;
            font-size: 16px;
            text-align: center;
            padding-top: 24px;
        }
    </style>
<% end %>
