<%= content_for(:header)  do %>
    <title>シェアパレ</title>
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        
        body{
            background: #ffd464;
        }
        
        .container{
            width: 960px;
            margin: 0 auto;
        }
        
        #intro{
            padding-top: 120px;
        }
        
        #intro img{
            display: block;
            margin-top: 120px;
            margin: 0 auto;
        }
        
        #intro a{
            text-decoration: none;
            color: #fff;
            border: 3px solid #fff;
            border-radius: 8px;
            transition: 0.4s;
            
            display: block;
            width: 180px;
            padding: 18px;
            text-align: center;
            margin: 96px auto 0;
        }
        
        #intro a:hover{
            color: #ffd464;
            background: #fff;
        }
    </style>
<% end %>
<main>
    <section id="intro">
            <div class="container">
                <%= image_tag 'top.png', :width =>'80%' %>
                <%= link_to "はじめる", new_part_path %>
            </div>
    </section>
</main>